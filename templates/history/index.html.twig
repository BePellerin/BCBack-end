{% extends 'base.html.twig' %}

{% block title %}History index
{% endblock %}

{% block body %}
	<section class="container">

		<h1 class="m-5">History index</h1>


		<table class="table">
<thead class="table-primary">

				<tr>
					<th>Id</th>
					<th>SellerName</th>
					<th>BuyerName</th>
					<th>UpdateAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for history in histories %}
					<tr>
						<td>{{ history.id }}</td>
						<td>{{ history.sellerName }}</td>
						<td>{{ history.buyerName }}</td>
						<td>{{ history.updateAt ? history.updateAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_history_show', {'id': history.id}) }}">show</a>
							<a href="{{ path('app_history_edit', {'id': history.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_history_new') }}">Create new</a>
	</section>
{% endblock %}
