{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<section class="container">


		<h1>User index</h1>

		<table class="table">
			<thead class="m-5">

			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>Username</th>
				<th>WalletAdress</th>
				<th>Avatar</th>
				<th>Status</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>Decription</th>
				<th>TwitterUrl</th>
				<th>InstagramUrl</th>
				<th>YoutubeUrl</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.username }}</td>
					<td>{{ user.walletAdress }}</td>
					<td>{{ user.avatar }}</td>
					<td>{{ user.status ? 'Yes' : 'No' }}</td>
					<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ user.decription }}</td>
					<td>{{ user.twitterUrl }}</td>
					<td>{{ user.instagramUrl }}</td>
					<td>{{ user.youtubeUrl }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="15">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_new') }}">Create new</a>
</section>{% endblock %}
