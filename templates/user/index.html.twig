{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<section class="container">

		<h1 class="m-5">User index</h1>


		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Username</th>
					<th>Status</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					{# <th>Id des collections</th> #}
					<th>actions</th>

				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.username }}</td>
						<td>{{ user.status ? 'Yes' : 'No' }}</td>
						<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : 'NULL' }}</td>
						<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : 'NULL' }}</td>
						{# <td>{{ user.collec.id }}</td> #}
						<td>

							<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
						</td>

					</tr>
				</td>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="7">no records found</td>
		</tr>
	{% endfor %}
</tbody></table><a href="{{ path('app_user_new') }}">Create new</a></section>{% endblock %}
