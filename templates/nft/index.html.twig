{% extends 'base.html.twig' %}

{% block title %}Nft index
{% endblock %}

{% block body %}
	<section class="container">

		<h1 class="m-5">Nft index</h1>

		<table class="table">

			<thead class="table-primary">

				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>CeatedAt</th>
					<th>Price</th>
					<th>Pict</th>
					<th>Creator</th>
					<th>Cat√©gorie</th>
					<th>Collection</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for nft in nfts %}
<tr class="table table-striped"></tr>

						<td>{{ nft.id }}</td>
						<td>{{ nft.title }}</td>
						<td>{{ nft.description }}</td>
						<td>{{ nft.ceatedAt ? nft.ceatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ nft.price }}</td>
						<td>{{ nft.pict }}</td>
						<td>{{ nft.creator }}</td>
						<td>{{ nft.collec.category.libelle }}</td>
						<td>{{ nft.collec.title }}</td>
						<td>
							<a href="{{ path('app_nft_show', {'id': nft.id}) }}">show</a>
							<a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_nft_new') }}">Create new</a>
	</section>
{% endblock %}
