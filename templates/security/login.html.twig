{% extends 'base.html.twig' %}

{% block title %}Espace Admin
{% endblock %}

{% block body %}
	{% if app.user is null %}


		<form class="container " method="post">


			<h1 style="margin:50px;">Administration de ViperCo</h1>
			<br>

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

			<label class="mb-2" for="inputEmail">Email</label>

			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-25" autocomplete="email" required autofocus>

			<label class="mb-2 mt-2" for="inputPassword">Mot de passe</label>

			<input type="password" name="password" id="inputPassword" class="form-control w-25" autocomplete="current-password" required>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button style="margin-top:10px;" class="btn btn-lg btn-success" type="submit">

				Se connecter
			</button>
		</form>

	{% endif %}

	{% if app.user %}
		<h1>Bienvenue</h1>
	{% endif %}

{% endblock %}
